<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_graph_main_menu.xml"
    app:startDestination="@id/solutionFragment">

    <fragment
        android:id="@+id/solutionFragment"
        android:name="ru.rxnnct.yesorno.screens.SolutionsFragment"
        android:label="SolutionFragment">
        <action
            android:id="@+id/action_mainMenuFragment_to_yesNoSolutionFragment"
            app:destination="@id/yesNoSolutionFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_solutionFragment_to_coinSolutionFragment"
            app:destination="@id/coinSolutionFragment" />
        <action
            android:id="@+id/action_solutionFragment_to_diceSolutionFragment"
            app:destination="@id/diceSolutionFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="ru.rxnnct.yesorno.screens.HistoryFragment"
        android:label="HistoryFragment" />
    <fragment
        android:id="@+id/yesNoSolutionFragment"
        android:name="ru.rxnnct.yesorno.screens.solutions.YesNoSolutionFragment"
        android:label="YesNoSolutionFragment" />
    <fragment
        android:id="@+id/tutorialFragment"
        android:name="ru.rxnnct.yesorno.screens.TutorialFragment"
        android:label="TutorialFragment" />
    <fragment
        android:id="@+id/coinSolutionFragment"
        android:name="ru.rxnnct.yesorno.screens.solutions.CoinSolutionFragment"
        android:label="CoinSolutionFragment" />
    <fragment
        android:id="@+id/diceSolutionFragment"
        android:name="ru.rxnnct.yesorno.screens.solutions.DiceSolutionFragment"
        android:label="DiceSolutionFragment" />
</navigation>